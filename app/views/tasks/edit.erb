<h1>Edit Your Task:</h1>

<form action="/tasks/<%= @task.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Task:</label>
        <input type="text" value="<%= @task.name %>" name="task"/>
    </label>
    <input type="submit" value="Update Task">
</form>